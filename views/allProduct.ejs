<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title  %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include("user/common/navbar.ejs")  %>
    <div class="container">
        <h1 style="text-align: center;">All Product List</h1>
        <br>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">SL NO.</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Size</th>
                <th scope="col">Image</th>
              </tr>
            </thead>
            <% let count=0  %>
            <% for(let prod of data){ %>
               
            <tbody>
              <tr>
                <th scope="row"><%= ++count  %></th>
                <td><%= prod.name  %></td>
                <td><%= prod.price  %></td>
                <td><%= prod.category %></td>
                <td><%= prod.size  %></td>
                <td><img src="<%= prod.image  %>" alt="product Image" height="100px" width="100px"></td>
              </tr>
             
            </tbody>
            <% } %>
          </table>
          <a href="/productForm"><Button>Add Product</Button></a>
          <a href="/generatePdf"><Button>generate Pdf</Button></a>
          <!-- <a href="/logout"><button>Logout</button></a> -->
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>